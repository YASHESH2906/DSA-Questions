import java.util.*;

public class OptimalStorageOnTape {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // User Input
        System.out.print("Enter number of programs: ");
        int n = sc.nextInt();
        int[] lengths = new int[n];
        System.out.println("Enter program lengths:");
        for (int i = 0; i < n; i++) {
            lengths[i] = sc.nextInt();
        }

        // Sort program lengths (Greedy step)
        Arrays.sort(lengths);

        // Compute MRT and cumulative retrieval times
        int sum = 0;
        int mrt_total = 0;
        System.out.println("Optimal storage order:");
        for (int i = 0; i < n; i++) {
            sum += lengths[i];
            mrt_total += sum;
            System.out.print(lengths[i] + " ");
        }
        System.out.println();

        double mrt = (double) mrt_total / n;
        System.out.printf("Minimum Mean Retrieval Time (MRT): %.2f\n", mrt);
        sc.close();
    }
}
